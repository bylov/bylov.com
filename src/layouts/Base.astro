---
import '../styles/global.css';
const { title = 'Hasse Bylov', description = 'Personal CV Website' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-zinc-50 text-zinc-900 antialiased">
    <header class="sticky top-0 z-50 backdrop-blur bg-white/70 border-b border-zinc-200 p-4 mb-6">
      <div class="max-w-4xl mx-auto flex justify-between items-center">
        <a href="/" class="font-bold text-lg">Hasse Bylov</a>
        <nav class="space-x-4 text-sm">
          <a href="/" class="hover:text-primary">Home</a>
          <a href="/projects" class="hover:text-primary">Projects</a>
          <a href="/resume" class="hover:text-primary">Resume</a>
          <a href="/admin/" class="hover:text-primary">Admin</a>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto p-6">
      <slot />
    </main>

    <footer class="border-t border-zinc-200 mt-10">
      <div class="max-w-4xl mx-auto p-6 text-sm text-zinc-500 flex justify-between">
        <p>Â© {new Date().getFullYear()} Hasse Bylov</p>
        <p><a class="hover:text-primary" href="https://github.com/bylov/" target="_blank">Source on GitHub</a></p>
      </div>
    </footer>
  </body>
</html>
